<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AnunciosLoc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Configurações"/>
    </LinearLayout>

    <!-- CARD Anúncios Próximos -->
    <LinearLayout
        android:id="@+id/card_anuncios"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card_red"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_mylocation"
            app:tint="@color/white"
            android:layout_marginEnd="12dp"
            android:contentDescription="ícone localização"/>

        <LinearLayout
            android:id="@+id/card_anuncios_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_anuncios_proximos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anúncios próximos"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- TITULO "Recentes" -->
    <TextView
        android:id="@+id/tituloRecentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recentes"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_anuncios"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CARD Evento -->

    <!-- NAVBAR (sempre no fundo da tela) -->
    <LinearLayout
        android:id="@+id/card_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloRecentes"
        app:layout_constraintVertical_bias="0.03">

        <!-- Linha principal: ícone + título + tag -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/event_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="ícone evento"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#5DB1F0" />

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palestra sobre IA"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_tag"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/tag_bg"
                android:gravity="center"
                android:padding="6dp"
                android:text="Central"
                android:textColor="@color/tag_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Descrição + Local + Data -->
        <LinearLayout
            android:id="@+id/event_texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amanhã às 14h no auditório principal. Inscrições abertas!"
                android:textColor="@color/muted_text"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/event_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/meta_icon_loc"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#888888" />

                <TextView
                    android:id="@+id/meta_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Campus Central"
                    android:textColor="@color/muted_text"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/meta_icon_date"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#888888" />

                <TextView
                    android:id="@+id/meta_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/11/2025"
                    android:textColor="@color/muted_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- FAB diretamente aqui -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/fab_add"
                layout="@layout/component_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp" />
        </FrameLayout>

        <!-- Navbar abaixo -->
        <include
            android:id="@+id/navBar"
            layout="@layout/component_navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>