<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AnunciosLoc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Configurações"/>
    </LinearLayout>

    <!-- CARD Anúncios Próximos -->
    <LinearLayout
        android:id="@+id/card_anuncios"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card_red"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_mylocation"
            app:tint="@color/white"
            android:layout_marginEnd="12dp"
            android:contentDescription="ícone localização"/>

        <LinearLayout
            android:id="@+id/card_anuncios_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_anuncios_proximos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anúncios próximos"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- TITULO "Recentes" -->
    <TextView
        android:id="@+id/tituloRecentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recentes"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_anuncios"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CARD Evento -->
    <LinearLayout
        android:id="@+id/card_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card_white"
        app:layout_constraintTop_toBottomOf="@id/tituloRecentes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Linha principal: ícone + título + tag -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/event_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#5DB1F0"
                android:layout_marginEnd="12dp"
                android:contentDescription="ícone evento"/>

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palestra sobre IA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/event_tag"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="Central"
                android:gravity="center"
                android:background="@color/tag_bg"
                android:textColor="@color/tag_text"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Descrição + Local + Data -->
        <LinearLayout
            android:id="@+id/event_texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/event_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amanhã às 14h no auditório principal. Inscrições abertas!"
                android:textSize="13sp"
                android:textColor="@color/muted_text"/>

            <LinearLayout
                android:id="@+id/event_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/meta_icon_loc"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#888888"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/meta_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campus Central"
                    android:textSize="12sp"
                    android:textColor="@color/muted_text"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/meta_icon_date"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#888888"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/meta_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/11/2025"
                    android:textSize="12sp"
                    android:textColor="@color/muted_text"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- NAVBAR -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="6dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ITEM Início -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_home_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="@color/primary_red"/>

            <TextView
                android:id="@+id/nav_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Início"
                android:textSize="12sp"
                android:textColor="@color/primary_red"/>
        </LinearLayout>

        <!-- ITEM Locais -->
        <LinearLayout
            android:id="@+id/nav_locais"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_locais_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_mapmode"
                app:tint="#666666" />

            <TextView
                android:id="@+id/nav_locais_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locais"
                android:textSize="12sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- ITEM Avisos -->
        <LinearLayout
            android:id="@+id/nav_avisos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_avisos_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#666666"/>

            <TextView
                android:id="@+id/nav_avisos_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avisos"
                android:textSize="12sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- ITEM Perfil -->
        <LinearLayout
            android:id="@+id/nav_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_perfil_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#666666"/>

            <TextView
                android:id="@+id/nav_perfil_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="12sp"
                android:textColor="#666666"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
