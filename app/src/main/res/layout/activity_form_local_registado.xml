<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".activities.FormLocalRegistado">

    <!-- Cabeçalho com seta de voltar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:color/transparent"
            app:tint="#333"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Criar Local"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center" />

        <View android:layout_width="40dp" android:layout_height="1dp" />
    </LinearLayout>

    <!-- ScrollView com o formulário -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnCreate"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card: Nome do Local -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome do Local"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etLocalName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Ex: Campus Central, Biblioteca"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:inputType="text" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Tipo de Local -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Local"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="12dp" />

                    <!-- Opção GPS -->
                    <LinearLayout
                        android:id="@+id/optionGps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioGps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            app:tint="#D32F2F"
                            android:layout_marginStart="8dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GPS"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Baseado em coordenadas"
                                android:textSize="13sp"
                                android:textColor="#666" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Opção WiFi -->
                    <LinearLayout
                        android:id="@+id/optionWifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioWifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_map"
                            app:tint="#0288D1"
                            android:layout_marginStart="8dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WiFi"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Baseado em redes WiFi"
                                android:textSize="13sp"
                                android:textColor="#666" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Configuração GPS (visível apenas se GPS selecionado) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGpsConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configuração GPS"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="12dp" />

                    <!-- Latitude -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude"
                        android:textSize="13sp"
                        android:textColor="#555"
                        android:layout_marginTop="8dp" />

                    <EditText
                        android:id="@+id/etLatitude"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="38.7223"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp" />

                    <!-- Longitude -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitude"
                        android:textSize="13sp"
                        android:textColor="#555"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/etLongitude"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="-9.1393"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp" />

                    <!-- Raio -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raio (metros)"
                        android:textSize="13sp"
                        android:textColor="#555"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/etRadius"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="500"
                        android:inputType="number"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Botão Criar Local -->
    <Button
        android:id="@+id/btnCreate"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Criar Local"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:cornerRadius="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>