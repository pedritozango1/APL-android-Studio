<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Voltar"/>

        <TextView
            android:id="@+id/titleSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Configurações"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- CARD MODO MULA -->
            <LinearLayout
                android:id="@+id/card_modo_mula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <!-- Linha principal: ícone + título + switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_icon_circle_red"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icon_modo_mula"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/stat_sys_download"
                            app:tint="@color/white"
                            android:contentDescription="ícone modo mula"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/text_modo_mula"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modo Mula"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/text_modo_mula_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retransmissão de mensagens (1 salto)"
                            android:textSize="13sp"
                            android:textColor="@color/muted_text"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_modo_mula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"/>
                </LinearLayout>

                <!-- Descrição -->
                <TextView
                    android:id="@+id/text_modo_mula_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quando ativado, seu dispositivo ajuda a retransmitir mensagens para outros utilizadores próximos."
                    android:textSize="13sp"
                    android:textColor="@color/muted_text"
                    android:layout_marginTop="12dp"
                    android:paddingStart="60dp"/>
            </LinearLayout>

            <!-- SEÇÃO REDE E CONECTIVIDADE -->
            <LinearLayout
                android:id="@+id/card_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <!-- Título da seção -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/icon_network"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/stat_sys_data_bluetooth"
                        app:tint="#5DB1F0"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="ícone rede"/>

                    <TextView
                        android:id="@+id/text_network_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rede e Conectividade"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- WiFi-Direct -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_wifi_direct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WiFi-Direct"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/text_wifi_direct_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comunicação peer-to-peer"
                            android:textSize="13sp"
                            android:textColor="@color/muted_text"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_wifi_direct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SEÇÃO NOTIFICAÇÕES -->
            <LinearLayout
                android:id="@+id/card_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <!-- Título da seção -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/icon_notifications"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_popup_reminder"
                        app:tint="#5DB1F0"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="ícone notificações"/>

                    <TextView
                        android:id="@+id/text_notifications_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notificações"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Ativar Notificações -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_ativar_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ativar Notificações"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/text_notifications_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receber alertas de proximidade"
                            android:textSize="13sp"
                            android:textColor="@color/muted_text"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SEÇÃO PRIVACIDADE E SEGURANÇA -->
            <LinearLayout
                android:id="@+id/card_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <!-- Título da seção -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/icon_privacy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock_idle_lock"
                        app:tint="#5DB1F0"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="ícone privacidade"/>

                    <TextView
                        android:id="@+id/text_privacy_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacidade e Segurança"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Descrição -->
                <TextView
                    android:id="@+id/text_privacy_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seus dados de localização são processados localmente e apenas compartilhados quando você publica anúncios."
                    android:textSize="13sp"
                    android:textColor="@color/muted_text"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>

            <!-- BOTÃO TERMINAR SESSÃO -->
            <LinearLayout
                android:id="@+id/card_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="16dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/icon_logout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="#E53935"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="ícone sair"/>

                <TextView
                    android:id="@+id/text_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminar Sessão"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#E53935"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>